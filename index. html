<!-- ================= SCRIPTS ================= -->
<script>
  // LOADING BAR
  const progress = document.querySelector("#loadingScreen .progress");
  let width = 0;
  const interval = setInterval(()=>{
    width += Math.random()*10;
    if(width>=100) width=100;
    progress.style.width = width+"%";
    if(width>=100){
      clearInterval(interval);
      const loader = document.getElementById("loadingScreen");
      loader.style.transition="opacity 0.6s ease"; loader.style.opacity=0;
      setTimeout(()=>{ loader.style.display="none";},600);
    }
  },200);

  // ACCORDION
  const accordions=document.querySelectorAll(".accordion");
  accordions.forEach(acc=>{acc.addEventListener("click",function(){
    this.classList.toggle("active");
    const panel=this.nextElementSibling;
    panel.style.display=(panel.style.display==="block")?"none":"block";
  })});

  // SERVER STATUS
  const SERVER={online:true, maintenance:false, version:"Latest"};
  function renderServerStatus(){
    const el=document.getElementById("serverStatus");
    const badge=document.getElementById("navbarStatus");
    if(!el||!badge)return;
    if(SERVER.maintenance){
      el.innerHTML='<div class="status-badge badge-maintenance">üõ† MAINTENANCE</div><div class="status-desc">Server sedang maintenance.<br>Mohon tunggu update selanjutnya.</div>';
      badge.textContent="üõ† MAINTENANCE"; badge.className="navbar-badge badge-maintenance";
    } else{
      el.innerHTML='<div class="status-badge '+(SERVER.online?'badge-online':'badge-offline')+'">'+(SERVER.online?'üü¢ ONLINE':'üî¥ OFFLINE')+'</div><div class="status-desc">Version: <b>'+SERVER.version+'</b></div>';
      badge.textContent=SERVER.online?'üü¢ ONLINE':'üî¥ OFFLINE';
      badge.className=SERVER.online?"navbar-badge badge-online":"navbar-badge badge-offline";
    }
  }
  renderServerStatus();
</script>

